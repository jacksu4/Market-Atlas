# Market-Atlas Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# Database
# ===========================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/market_atlas
REDIS_URL=redis://localhost:6379/0

# ===========================================
# Authentication
# ===========================================
# IMPORTANT: Generate a secure random secret key (minimum 32 characters)
# You can generate one using: openssl rand -hex 32
JWT_SECRET_KEY=CHANGE_ME_TO_A_SECURE_RANDOM_STRING_OF_AT_LEAST_32_CHARACTERS
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# NextAuth.js
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production
NEXTAUTH_URL=http://localhost:3000

# ===========================================
# AI / LLM
# ===========================================
ANTHROPIC_API_KEY=your-anthropic-api-key

# ===========================================
# Financial Data APIs
# ===========================================
FINNHUB_API_KEY=your-finnhub-api-key
POLYGON_API_KEY=your-polygon-api-key
FMP_API_KEY=your-fmp-api-key

# ===========================================
# Telegram Bot
# ===========================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# ===========================================
# Application Settings
# ===========================================
ENVIRONMENT=development
DEBUG=true
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
